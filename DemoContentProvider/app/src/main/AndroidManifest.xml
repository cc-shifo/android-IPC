<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.democontentprovider">

    <permission android:name="com.example.democontentprovider.ACCESS_PROVIDER" />

    <uses-permission android:name="com.example.democontentprovider.ACCESS_PROVIDER" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ProviderActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--android:authorities该属性可自定义字符串内容。-->
        <provider
            android:authorities="com.example.democontentprovider"
            android:name=".BookContentProvider"
            android:permission="com.example.democontentprovider.ACCESS_PROVIDER"
            android:process=":provider"
            android:enabled="true"
            android:exported="true"
            />
    </application>

</manifest>